{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.autoSave": "off",
  "mochaExplorer.env": {
    "TS_NODE_FILES": "true"
  },
  "mochaExplorer.files": "test/**/*Test.ts",
  "mochaExplorer.parallel": false,
  "mochaExplorer.exit": true,
  "mochaExplorer.debuggerConfig": "Debug Mocha Tests",
  "search.usePCRE2": true
}
